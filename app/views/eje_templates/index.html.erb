<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ejes.each do |eje| %>
      <tr>
        <!-- Display eje.id start -->
        <td>
          <%= eje.id %>
        </td>
        <!-- Display eje.id end -->

        <!-- Display eje.created_at start -->
        <td>
          <%= time_ago_in_words(eje.created_at) %> ago
        </td>
        <!-- Display eje.created_at end -->

        <!-- Display eje.updated_at start -->
        <td>
          <%= time_ago_in_words(eje.updated_at) %> ago
        </td>
        <!-- Display eje.updated_at end -->

        <td>
          <a href="/ejes/<%= eje.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
