<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ejes
    </h1>

    <a href="/ejes/new" class="btn btn-block btn-outline-secondary">
      Add a new eje
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "eje_templates/ejes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ejes.each do |eje| %>
      <tr>
        <td>
          <%= eje.id %>
        </td>

        <td>
          <%= time_ago_in_words(eje.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(eje.updated_at) %> ago
        </td>

        <td>
          <a href="/ejes/<%= eje.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ejes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
