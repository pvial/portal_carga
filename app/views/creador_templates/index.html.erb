<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @creadors.each do |creador| %>
      <tr>
        <!-- Display creador.id start -->
        <td>
          <%= creador.id %>
        </td>
        <!-- Display creador.id end -->

        <!-- Display creador.email start -->
        <td>
          <%= creador.email %>
        </td>
        <!-- Display creador.email end -->

        <!-- Display creador.password start -->
        <td>
          <%= creador.password %>
        </td>
        <!-- Display creador.password end -->

        <!-- Display creador.created_at start -->
        <td>
          <%= time_ago_in_words(creador.created_at) %> ago
        </td>
        <!-- Display creador.created_at end -->

        <!-- Display creador.updated_at start -->
        <td>
          <%= time_ago_in_words(creador.updated_at) %> ago
        </td>
        <!-- Display creador.updated_at end -->

        <td>
          <a href="/creadors/<%= creador.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
