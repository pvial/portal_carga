<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All creadors
    </h1>

    <a href="/creadors/new" class="btn btn-block btn-outline-secondary">
      Add a new creador
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @creadors.each do |creador| %>
      <tr>
        <td>
          <%= creador.id %>
        </td>

        <td>
          <%= creador.email %>
        </td>

        <td>
          <%= creador.password %>
        </td>

        <td>
          <%= time_ago_in_words(creador.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(creador.updated_at) %> ago
        </td>

        <td>
          <a href="/creadors/<%= creador.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @creadors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
