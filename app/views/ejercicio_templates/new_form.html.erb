<h1>
  Add a new ejercicio
</h1>


<hr>

<form action="/create_ejercicio" method="post" enctype="multipart/form-data">

  <div class="form-check">
    <input type="hidden" value="0" name="aprobado">
    <input id="aprobado" class="form-check-input" name="aprobado" type="checkbox">
    <label for="aprobado" class="form-check-label">
      Aprobado
    </label>
  </div>

  <div class="form-group">
    <label for="contenido_id">
      Contenido
    </label>

    <%= select_tag(:contenido_id, options_from_collection_for_select(Contentido.all, :id, :eje_id, @ejercicio.contenido_id), :class => "form-control") %>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="bandera">
    <input id="bandera" class="form-check-input" name="bandera" type="checkbox">
    <label for="bandera" class="form-check-label">
      Bandera
    </label>
  </div>

  <div class="form-group">
    <label for="comentario">
      Comentario
    </label>

    <textarea id="comentario" name="comentario" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="molde_id">
      Molde
    </label>

    <%= select_tag(:molde_id, options_from_collection_for_select(Molde.all, :id, :created_at, @ejercicio.molde_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="enunciado">
      Enunciado
    </label>

    <textarea id="enunciado" name="enunciado" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="imagen">
      Imagen
    </label>

    <input type="file" id="imagen" name="imagen" class="form-control">
  </div>

  <div class="form-group">
    <label for="resp_correcta">
      Resp correcta
    </label>

    <input type="text" id="resp_correcta" name="resp_correcta" class="form-control">
  </div>

  <div class="form-group">
    <label for="w1">
      W1
    </label>

    <textarea id="w1" name="w1" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="w2">
      W2
    </label>

    <textarea id="w2" name="w2" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="w3">
      W3
    </label>

    <textarea id="w3" name="w3" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="w4">
      W4
    </label>

    <textarea id="w4" name="w4" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="op1">
      Op1
    </label>

    <textarea id="op1" name="op1" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="op2">
      Op2
    </label>

    <textarea id="op2" name="op2" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="op3">
      Op3
    </label>

    <textarea id="op3" name="op3" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="op4">
      Op4
    </label>

    <textarea id="op4" name="op4" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="op5">
      Op5
    </label>

    <textarea id="op5" name="op5" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="hint">
      Hint
    </label>

    <textarea id="hint" name="hint" class="form-control" rows="3"></textarea>
  </div>

  <div class="form-group">
    <label for="dificultad">
      Dificultad
    </label>

    <input type="text" id="dificultad" name="dificultad" class="form-control">
  </div>

  <div class="form-group">
    <label for="habilidad">
      Habilidad
    </label>

    <input type="text" id="habilidad" name="habilidad" class="form-control">
  </div>

  <div class="form-group">
    <label for="last_pre_ex_id">
      Last pre ex
    </label>

    <%= select_tag(:last_pre_ex_id, options_from_collection_for_select(PreEx.all, :id, :contenido_id, @ejercicio.last_pre_ex_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="creador_id" value="<%= current_creador.id %>">

  <div class="form-group">
    <label for="aprobador_id">
      Aprobador
    </label>

    <%= select_tag(:aprobador_id, options_from_collection_for_select(Aprobador.all, :id, :email, @ejercicio.aprobador_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create ejercicio
  </button>
</form>

<hr>

<a href="/ejercicios">
  Go back
</a>
