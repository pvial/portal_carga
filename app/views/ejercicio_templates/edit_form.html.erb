  <!-- Label and input for w3 end -->

  <!-- Label and input for w4 start -->
  <div class="form-group">
    <label for="w4">
      W4
    </label>

    <!-- Input for w4 start -->
    <textarea id="w4" name="w4" class="form-control" rows="3"><%= @ejercicio.w4 %></textarea>
    <!-- Input for w4 end -->
  </div>
  <!-- Label and input for w4 end -->

  <!-- Label and input for op1 start -->
  <div class="form-group">
