    <!-- Input for op1 end -->
  </div>
  <!-- Label and input for op1 end -->

  <!-- Label and input for op2 start -->
  <div class="form-group">
    <label for="op2">
      Op2
    </label>

    <!-- Input for op2 start -->
    <textarea id="op2" name="op2" class="form-control" rows="3"><%= @ejercicio.op2 %></textarea>
    <!-- Input for op2 end -->
  </div>
  <!-- Label and input for op2 end -->

  <!-- Label and input for op3 start -->
  <div class="form-group">
    <label for="op3">
      Op3
    </label>

    <!-- Input for op3 start -->
    <textarea id="op3" name="op3" class="form-control" rows="3"><%= @ejercicio.op3 %></textarea>
    <!-- Input for op3 end -->
  </div>
  <!-- Label and input for op3 end -->

  <!-- Label and input for op4 start -->
  <div class="form-group">
    <label for="op4">
      Op4
    </label>

    <!-- Input for op4 start -->
    <textarea id="op4" name="op4" class="form-control" rows="3"><%= @ejercicio.op4 %></textarea>
