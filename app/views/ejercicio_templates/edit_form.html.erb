<h1>
  Edit ejercicio #<%= @ejercicio.id %>
</h1>

<hr>

<!-- Form ejercicio start -->
<form action="/update_ejercicio/<%= @ejercicio.id %>" method="post" enctype="multipart/form-data">
<!-- Form ejercicio end -->

  <!-- Label and input for aprobado start -->
  <div class="form-check">
    <input type="hidden" value="0" name="aprobado">
    <!-- Input for aprobado start -->
    <input id="aprobado" class="form-check-input" name="aprobado" type="checkbox" value="1" <%= "checked" if @ejercicio.aprobado %>>
    <!-- Input for aprobado end -->
    <label for="aprobado" class="form-check-label">
      Aprobado
    </label>
  </div>

  <!-- Label and input for contenido_id start -->
  <div class="form-group">
    <label for="contenido_id">
      Contenido
    </label>

    <!-- Input for contenido_id start -->
    <%= select_tag(:contenido_id, options_from_collection_for_select(Contentido.all, :id, :eje_id, @ejercicio.contenido_id), :class => "form-control") %>
    <!-- Input for contenido_id end -->
  </div>
  <!-- Label and input for contenido_id end -->

  <!-- Label and input for bandera start -->
  <div class="form-check">
    <input type="hidden" value="0" name="bandera">
    <!-- Input for bandera start -->
    <input id="bandera" class="form-check-input" name="bandera" type="checkbox" value="1" <%= "checked" if @ejercicio.bandera %>>
    <!-- Input for bandera end -->
    <label for="bandera" class="form-check-label">
      Bandera
    </label>
  </div>

  <!-- Label and input for comentario start -->
  <div class="form-group">
    <label for="comentario">
      Comentario
    </label>

    <!-- Input for comentario start -->
    <textarea id="comentario" name="comentario" class="form-control" rows="3"><%= @ejercicio.comentario %></textarea>
    <!-- Input for comentario end -->
  </div>
  <!-- Label and input for comentario end -->

  <!-- Label and input for molde_id start -->
  <div class="form-group">
    <label for="molde_id">
      Molde
    </label>

    <!-- Input for molde_id start -->
    <input type="text" id="molde_id" name="molde_id" class="form-control" value="<%= @ejercicio.molde_id %>">
    <!-- Input for molde_id end -->
  </div>
  <!-- Label and input for molde_id end -->

  <!-- Label and input for enunciado start -->
  <div class="form-group">
    <label for="enunciado">
      Enunciado
    </label>

    <!-- Input for enunciado start -->
    <textarea id="enunciado" name="enunciado" class="form-control" rows="3"><%= @ejercicio.enunciado %></textarea>
    <!-- Input for enunciado end -->
  </div>
  <!-- Label and input for enunciado end -->

  <!-- Label and input for imagen start -->
  <div class="form-group">
    <label for="imagen">
      Imagen
    </label>

    <!-- Input for imagen start -->
    <%= cl_image_tag(@ejercicio.imagen.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="imagen" name="imagen" class="form-control">
    <!-- Input for imagen end -->
  </div>
  <!-- Label and input for imagen end -->

  <!-- Label and input for resp_correcta start -->
  <div class="form-group">
    <label for="resp_correcta">
      Resp correcta
    </label>

    <!-- Input for resp_correcta start -->
    <input type="text" id="resp_correcta" name="resp_correcta" class="form-control" value="<%= @ejercicio.resp_correcta %>">
    <!-- Input for resp_correcta end -->
  </div>
  <!-- Label and input for resp_correcta end -->

  <!-- Label and input for w1 start -->
  <div class="form-group">
    <label for="w1">
      W1
    </label>

    <!-- Input for w1 start -->
    <textarea id="w1" name="w1" class="form-control" rows="3"><%= @ejercicio.w1 %></textarea>
    <!-- Input for w1 end -->
  </div>
  <!-- Label and input for w1 end -->

  <!-- Label and input for w2 start -->
