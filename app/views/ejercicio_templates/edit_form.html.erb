  <!-- Label and input for aprobador_id start -->
  <div class="form-group">
    <label for="aprobador_id">
      Aprobador
    </label>

    <!-- Input for aprobador_id start -->
    <input type="text" id="aprobador_id" name="aprobador_id" class="form-control" value="<%= @ejercicio.aprobador_id %>">
    <!-- Input for aprobador_id end -->
  </div>
  <!-- Label and input for aprobador_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update ejercicio
  </button>
</form>

<hr>

<a href="/ejercicios">
  Go back
</a>
