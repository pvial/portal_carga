<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All aprobadors
    </h1>

    <a href="/aprobadors/new" class="btn btn-block btn-outline-secondary">
      Add a new aprobador
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @aprobadors.each do |aprobador| %>
      <tr>
        <td>
          <%= aprobador.id %>
        </td>

        <td>
          <%= aprobador.email %>
        </td>

        <td>
          <%= aprobador.password %>
        </td>

        <td>
          <%= time_ago_in_words(aprobador.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(aprobador.updated_at) %> ago
        </td>

        <td>
          <a href="/aprobadors/<%= aprobador.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @aprobadors, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
