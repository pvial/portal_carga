<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Aprobador #<%= @aprobador.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/aprobadors" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/aprobadors/<%= @aprobador.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit aprobador
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @aprobador.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @aprobador.password %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@aprobador.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@aprobador.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "aprobador_templates/aprobador_ejercicios" %>
  </div>
</div>
