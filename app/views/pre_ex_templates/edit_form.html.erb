    </label>

    <!-- Input for op5 start -->
    <textarea id="op5" name="op5" class="form-control" rows="3"><%= @pre_ex.op5 %></textarea>
    <!-- Input for op5 end -->
  </div>
  <!-- Label and input for op5 end -->

  <!-- Label and input for hint start -->
  <div class="form-group">
    <label for="hint">
      Hint
    </label>

    <!-- Input for hint start -->
    <textarea id="hint" name="hint" class="form-control" rows="3"><%= @pre_ex.hint %></textarea>
    <!-- Input for hint end -->
  </div>
  <!-- Label and input for hint end -->

  <!-- Label and input for dificultad start -->
  <div class="form-group">
    <label for="dificultad">
      Dificultad
    </label>

    <!-- Input for dificultad start -->
    <input type="text" id="dificultad" name="dificultad" class="form-control" value="<%= @pre_ex.dificultad %>">
    <!-- Input for dificultad end -->
  </div>
