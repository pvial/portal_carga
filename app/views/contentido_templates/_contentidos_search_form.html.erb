<%= search_form_for @q, :class => collapse_search_form, :id => "contentidos_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :ejercicios_aprobado_eq, "Ejercicio aprobado " %>
    <label class="radio-inline">
      <%= f.radio_button :ejercicios_aprobado_eq, "1", checked: ((params[:q] && params[:q][:ejercicios_aprobado_eq]) == "1" ? "checked" : "") %> Yes
    </label>
    <label class="radio-inline">
      <%= f.radio_button :ejercicios_aprobado_eq, "0", checked: ((params[:q] && params[:q][:ejercicios_aprobado_eq]) == "0" ? "checked" : "")%> No
    </label>
    <label class="radio-inline">
      <%= f.radio_button :ejercicios_aprobado_eq, ""%> Either
    </label>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Eje Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='ejegteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :eje_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Eje Created at greater than or equal to", :data => {:target => '#ejegteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#ejegteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='ejelteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :eje_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Eje Created at less than or equal to", :data => {:target => '#ejelteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#ejelteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#ejegteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ejelteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#ejegteqcreated_atPicker').on("dp.change", function (e) {
              $('#ejelteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#ejelteqcreated_atPicker').on("dp.change", function (e) {
              $('#ejegteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/contentidos" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

