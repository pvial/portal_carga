<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All contentidos
    </h1>

    <a href="/contentidos/new" class="btn btn-block btn-outline-secondary">
      Add a new contentido
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "contentido_templates/contentidos_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Eje
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @contentidos.each do |contentido| %>
      <tr>
        <td>
          <%= contentido.id %>
        </td>

        <td>
          <% if contentido.eje.present? %>
            <a href="/ejes/<%= contentido.eje.id %>">
              <%= contentido.eje.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(contentido.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(contentido.updated_at) %> ago
        </td>

        <td>
          <a href="/contentidos/<%= contentido.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @contentidos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
