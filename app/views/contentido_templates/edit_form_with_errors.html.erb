<!-- Validation failure messages -->
<% if @contentido.errors.any? %>
  <% @contentido.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit contentido #<%= @contentido.id %>
</h1>

<hr>

<!-- Form contentido start -->
<form action="/update_contentido/<%= @contentido.id %>" method="post">
<!-- Form contentido end -->

  <!-- Label and input for eje_id start -->
  <div class="form-group">
    <label for="eje_id">
      Eje
    </label>

    <!-- Input for eje_id start -->
    <%= select_tag(:eje_id, options_from_collection_for_select(Eje.all, :id, :created_at, @contentido.eje_id), :class => "form-control") %>
    <!-- Input for eje_id end -->
  </div>
  <!-- Label and input for eje_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update contentido
  </button>
</form>

<hr>

<a href="/contentidos">
  Go back
</a>
