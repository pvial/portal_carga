<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ejercicios

    <a data-toggle="collapse" href="#contentido_ejercicios_new_form">
      Add ejercicio
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @contentido.ejercicios.each do |ejercicio| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/ejercicios/<%= ejercicio.id %>">
          <%= ejercicio.aprobado %>
        </a>

        <%if current_creador == ejercicio.creador %>
          <a href="/delete_ejercicio_from_contentido/<%= ejercicio.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="contentido_ejercicios_new_form">
        <%= render partial: "contentido_templates/contentido_ejercicios_new_form" %>
      </div>
    </div>

  </ul>
</div>
