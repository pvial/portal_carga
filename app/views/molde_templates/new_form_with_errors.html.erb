<!-- Validation failure messages -->
<% if @molde.present? %>
  <% if @molde.errors.any? %>
    <% @molde.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new molde
</h1>


