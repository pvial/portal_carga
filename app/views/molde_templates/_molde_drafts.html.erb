<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Drafts

    <a data-toggle="collapse" href="#molde_drafts_new_form">
      Add pre ex
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @molde.drafts.each do |pre_ex| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/pre_exes/<%= pre_ex.id %>">
          <%= pre_ex.contenido_id %>
        </a>

        <a href="/delete_pre_ex_from_molde/<%= pre_ex.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="molde_drafts_new_form">
        <%= render partial: "molde_templates/molde_drafts_new_form" %>
      </div>
    </div>

  </ul>
</div>
