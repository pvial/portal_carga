<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All moldes
    </h1>

    <a href="/moldes/new" class="btn btn-block btn-outline-secondary">
      Add a new molde
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "molde_templates/moldes_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @moldes.each do |molde| %>
      <tr>
        <!-- Display molde.id start -->
        <td>
          <%= molde.id %>
        </td>
        <!-- Display molde.id end -->

        <!-- Display molde.created_at start -->
        <td>
          <%= time_ago_in_words(molde.created_at) %> ago
        </td>
        <!-- Display molde.created_at end -->

        <!-- Display molde.updated_at start -->
        <td>
          <%= time_ago_in_words(molde.updated_at) %> ago
        </td>
        <!-- Display molde.updated_at end -->

        <td>
          <a href="/moldes/<%= molde.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @moldes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
